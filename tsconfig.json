{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"typeRoots": ["./src/lib/types/**/*", "../../node_modules/@types"],
		"paths": {
			"#config": ["config.ts"],
			"#lib/*": ["lib/*"],
			"#modules/*": ["modules/*"]
		}
	},
	"include": ["src"]
}
